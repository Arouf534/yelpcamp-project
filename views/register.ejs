<%- include("partials/header") %>
<div class="container">
<form action="/register" method="POST">
    <h1>Register page</h1>
    <div class="form-group">
        <label for="inputname">Name</label>
        <input type="text" class="form-control" name="name" id="inputname" placeholder="Abdu Rouf">
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputusername">Username</label>
        <input type="text" class="form-control" name="username" id="inputusername">
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword4">Password</label>
        <input type="password" class="form-control" name="password" id="inputPassword4">
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail4">Email</label>
      <input type="email" class="form-control" name="email" id="inputEmail4" placeholder="something@gmail.com">
    </div>
    <div class="form-group">
      <label for="inputlink">Image</label>
      <input type="text" class="form-control" name="image" id="inputlink" placeholder="image link">
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Example textarea</label>
        <textarea class="form-control" name="discr" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>

<h3><%= error %></h3>
</div>

<%- include("partials/footer") %>
